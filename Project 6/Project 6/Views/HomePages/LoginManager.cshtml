@model Project_6.Models.Manager
@{
    ViewData["Title"] = "Login";
}


@{
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


<style>

    section {
        background: linear-gradient(90deg, rgba(103,125,106,.5) 0%, rgba(103,125,106,.5) 35%), url('../img/Frame_1.png');
        background-repeat: no-repeat;
        background-size: cover;
    }

</style>

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src='https://images-ext-1.discordapp.net/external/wSHOWIG9L3kgyQH4TC1mgUcnayf8r3oiHv6Kr8q47AY/%3Fauto%3Dcompress%26cs%3Dtinysrgb%26w%3D1260%26h%3D750%26dpr%3D2/https/images.pexels.com/photos/3184610/pexels-photo-3184610.jpeg?format=webp&width=443&height=663'
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-action="LoginManager" method="post">


                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <a asp-controller="HomePages" asp-action="Index"><img src="/img/logo.png" width="150"></a>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login to your account</h5>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Email" class="form-label">Email address</label>
                                        <input asp-for="Email" class="form-control form-control-lg" required />

                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" type="password" class="form-control form-control-lg" required />

                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                    </div>

                                    <a class="small text-muted" asp-controller="Managers" asp-action="ForgotPassword">Forgot password?</a>



                                    @if (ViewData["ErrorMessage"] != null)
                                    {
                                        <p class="text-danger">@ViewData["ErrorMessage"]</p>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>