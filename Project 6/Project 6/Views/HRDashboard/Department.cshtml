                @model IEnumerable<Project_6.Models.Department>
@{
    Layout = "~/Views/Shared/_HHLayout.cshtml";
}
<h2 style="margin-left:2%">Department</h2>
<hr />

<p style="margin-left:2%">
    <a asp-action="CreateDepartment" class="btn btn-dark">Create New</a>
</p>

<div class="container mt-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card text-white shadow-lg" style="background-color: #677D6A;height: 540px;">
                    <img src="@Url.Content("~/HR_image/" + item.Image)" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Department Image">
                    <div class="card-body">
                        <h5 class="card-title" style="color:white; font-weight:bold"><i class="fas fa-building"></i> @item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Edit</a>
                            <form method="post" action="@Url.Action("DeleteDepartment", "HRDashboard")" onsubmit="return confirm('Are you sure you want to delete this department?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
