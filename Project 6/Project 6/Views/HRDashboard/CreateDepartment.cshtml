@model Project_6.Models.Department
@{
    Layout = "~/Views/Shared/_HHLayout.cshtml";
}


<h2>Create New Department</h2>
<hr />


<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="CreateDepartment" enctype="multipart/form-data" class="bg-dark text-white p-4 rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Department Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter department name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the department"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ManagerId" class="control-label">Manager Name</label>
                <select asp-for="Id" asp-items="ViewBag.ManagerId" class="form-control">
                    <option value="">-- Select Manager --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label">Department Image</label>
                <input type="file" asp-for="Image" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Department" class="btn btn-secondary">Back to List</a>
</div>

