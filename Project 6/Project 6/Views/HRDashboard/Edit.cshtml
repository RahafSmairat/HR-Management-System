@model Project_6.Models.Department

@{
    Layout = "~/Views/Shared/_HHLayout.cshtml";
}

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="HRDashboard" enctype="multipart/form-data" class="bg-dark text-white p-4 rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@ViewBag.DepName"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@ViewBag.DepDes" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="image" class="form-control" value="@ViewBag.DepImage" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ManagerId" class="control-label">Manager Name</label>
                <select asp-for="Id" asp-items="ViewBag.ManagerId" class="form-control">
                    <option value="">-- Select Manager --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:5%">
    <a asp-action="Department" class="btn btn-secondary">Back to List</a>
</div>

