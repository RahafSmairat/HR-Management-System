@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/HomeLayout.cshtml";

}

<style>
    section {
        background: linear-gradient(90deg, rgba(103, 125, 106, .5) 0%, rgba(103, 125, 106, .5) 35%), url('../img/Frame_1.png') !important;
        background-repeat: no-repeat !important;
        background-size: cover !important;

    }

    .card-header {
        background-color: white !important;
        border: none;
    }
</style>
<section class="vh-100">
    <div class="container" id="forgetPass">
        <div class="row justify-content-center">
            <div class="col-md-6" style="box-shadow: 0 0 3px #1A3636;margin: 5%;background-color: #fff;">
                <div class="card mt-5">
                    <div class="card-header text-white">
                        <h3 class="card-title">Reset Password</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" name="email" value="@Context.Request.Query["email"]" />
                            <div class="form-group">
                                <label for="newPassword" class="control-label">New Password</label>
                                <input type="password" id="newPassword" name="newPassword" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword" class="control-label">Confirm Password</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="btn">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
