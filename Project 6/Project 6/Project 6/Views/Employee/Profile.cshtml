@model Project_6.Models.Employee


@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 uxa-form-group mt-5">


            <div class="uxa-user-avatar" style="display: flex;justify-content: center;" >
                <img src="@Context.Session.GetString("ProfileImage")" alt="User avatar" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
            </div>

            <form asp-action="EditProfile" method="post" class="mt-5 mb-5">


                <div class="form-group">
                    <label>Name:</label>
                    <input value="@Context.Session.GetString("UserName")" class="form-control" readonly />

                </div>

                <div class="form-group">
                    <label>Email:</label>
                    <input value="@Context.Session.GetString("UserEmail")" class="form-control" readonly />

                </div>

                <div class="form-group">
                    <label>Position:</label>
                    <input value="@Context.Session.GetString("Position")" class="form-control" readonly />

                </div>



                <div class="pt-1 mb-4 editbtn">
                    @* <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Edit Profile</button> *@
                    <a asp-action="EditProfile" type="submit" class="btn btn-dark btn-lg btn-block">Edit Profile</a>
                    <a asp-action="ResetPassword" type="submit" class="btn btn-dark btn-lg btn-block">Reset Password</a>
                </div>
            </form>

        </div>
    </div>
</div>
