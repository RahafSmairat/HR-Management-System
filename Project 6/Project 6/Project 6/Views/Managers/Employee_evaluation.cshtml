@{
    ViewData["Title"] = "Employee Evaluation";
    var questions = ViewBag.Questions as List<string>;
}

<h2>Employee Evaluation</h2>

<form asp-action="Submit_Evaluation" method="post">
    <input type="hidden" name="EmployeeId" value="@ViewBag.EmployeeId" />
    <input type="hidden" name="ManagerId" value="@ViewBag.ManagerId" />

    @for (int i = 0; i < questions.Count; i++)
    {
        <div class="form-group">
            <label>@questions[i]</label>
            <select name="Answers" class="form-control">
                <option value="1">1 - Poor</option>
                <option value="2">2 - Fair</option>
                <option value="3">3 - Good</option>
                <option value="4">4 - Very Good</option>
                <option value="5">5 - Excellent</option>
            </select>
        </div>
        <br />
    }

    <div class="form-group">
        <label>Any comments you would like to add?</label>
        <textarea name="Comments" class="form-control"></textarea>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Submit Evaluation</button>
</form>
