@{
    ViewData["Title"] = "Verify Code";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Verify Code</h3>
                </div>
                <div class="card-body">
                    <form asp-action="VerifyCode" method="post">
                        <input type="hidden" name="email" value="@Context.Request.Query["email"]" />
                        <div class="form-group">
                            <label for="code" class="control-label">Code</label>
                            <input type="text" id="code" name="code" class="form-control" placeholder="Enter the code" required />
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Verify Code</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>