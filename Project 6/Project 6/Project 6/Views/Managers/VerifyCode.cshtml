@{
    ViewData["Title"] = "Verify Code";
    Layout = "~/Views/Shared/HomeLayout.cshtml";

}
<style>
    section {
        background: linear-gradient(90deg, rgba(103, 125, 106, .5) 0%, rgba(103, 125, 106, .5) 35%), url('../img/Frame_1.png') !important;
        background-repeat: no-repeat !important;
        background-size: cover !important;

    }

    .card-header{
        background-color: white !important;
        border: none;
    }
</style>
<section class="vh-100">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6" style="box-shadow: 0 0 3px #1A3636;margin: 5%;background-color: #fff;">
                <div class="card mt-5">
                    <div class="card-header text-white">
                        <h3 class="card-title">Verify Code</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="VerifyCode" method="post">
                            <input type="hidden" name="email" value="@Context.Request.Query["email"]" />
                            <div class="form-group">
                                <label for="code" class="control-label">Code</label>
                                <input type="text" id="code" name="code" class="form-control" placeholder="Enter the code" required />
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="btn">Verify Code</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
